web1:
  document_root: public
  php_version: 5.4.14
  php_extensions:
    - mbstring
    - mcrypt
    - curl
    - redis
    - zip
    - xcache
  shared_writable_dirs:
    - app/storage/cache
    - app/storage/logs
    - app/storage/meta
    - app/storage/sessions
    - app/storage/views
  after_build:
    - "if [ ! -f composer.phar ]; then curl -s http://getcomposer.org/installer | php; fi; COMPOSER_PROCESS_TIMEOUT=5000 php composer.phar install --prefer-source --no-progress --no-dev"
